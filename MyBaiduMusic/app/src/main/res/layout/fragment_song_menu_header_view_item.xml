<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:id="@+id/fragment_song_menu_ll"
              android:layout_height="wrap_content">
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/ten"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:background="#1cb6ed"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:text="全部歌单"/>

        <ImageView
            android:id="@+id/songfragmentmenu_detail_quanbu_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/bt_mv_pull_down_normal"/>
        <LinearLayout
            android:layout_width="@dimen/onehundredseventy"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/songfragmentmenu_zuire_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/fifteen"
            android:text="最热"
            />
        <TextView
            android:id="@+id/songfragmentmenu_zuixin_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="最新"
            />


    </LinearLayout>
</LinearLayout>