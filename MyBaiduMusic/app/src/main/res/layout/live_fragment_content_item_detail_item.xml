<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_margin="@dimen/ten"
   >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5">
        <ImageView
            android:id="@+id/live_fragment_content_item_detail_item_liveimg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_launcher"
            android:layout_alignParentTop="true"
            android:scaleType="fitXY"
            android:layout_alignParentStart="true"/>
        <ImageView
            android:id="@+id/iv"
            android:layout_width="@dimen/fifteen"
            android:layout_height="@dimen/fifteen"
            android:src="@mipmap/img_live_play_people"
            android:layout_alignParentBottom="true"

            />
        <TextView
            android:id="@+id/live_fragment_content_item_detail_item_usercount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5228"

            android:layout_toRightOf="@id/iv"
            android:layout_alignTop="@id/iv"
            android:textColor="#fff"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_live_play_press"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>
    <TextView
        android:id="@+id/live_fragment_content_item_detail_item_nickname"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="点击领取媳妇一枚"
        android:gravity="center_vertical"/>

</LinearLayout>