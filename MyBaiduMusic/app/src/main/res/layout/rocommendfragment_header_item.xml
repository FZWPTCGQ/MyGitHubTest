<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

   <include layout="@layout/headerview_beaner"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:padding="@dimen/margintwenty">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/recommend_fragment_header_item_iv_songpeople"
                    android:layout_width="@dimen/fifty"
                    android:layout_height="@dimen/fifty"
                    android:src="@mipmap/songpeople" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="歌手"
                    android:layout_marginTop="@dimen/five"
                    android:textColor="#21B3FF"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/recommend_fragment_header_item_iv_songlist"
                    android:layout_width="@dimen/fifty"
                    android:layout_height="@dimen/fifty"
                    android:src="@mipmap/songlist"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="歌曲分类"
                    android:layout_marginTop="@dimen/five"
                    android:textColor="#21B3FF"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/recommend_fragment_header_item_iv_diantai"
                    android:layout_width="@dimen/fifty"
                    android:layout_height="@dimen/fifty"
                    android:src="@mipmap/diantai"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="歌曲分类"
                    android:layout_marginTop="@dimen/five"
                    android:textColor="#21B3FF"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/recommend_fragment_header_item_iv_vipyuan"
                    android:layout_width="@dimen/fifty"
                    android:layout_height="@dimen/fifty"
                    android:src="@mipmap/vipyuan"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="会员专区"
                    android:layout_marginTop="@dimen/five"
                    android:textColor="#21B3FF"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>