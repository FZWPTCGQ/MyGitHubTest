<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_resigster"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="com.aqiang.dllo.mybaidumusic.activity.ResigsterActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/zero"
        android:layout_weight="1.5"
        android:gravity="center_vertical"
        android:background="#F8F8F8">
       <ImageView
           android:id="@+id/resigster_return"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:src="@mipmap/bt_return_nor"
           android:layout_margin="@dimen/marginten"/>
       <TextView
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:text="百度账号登录"
           android:gravity="center"
           android:textSize="@dimen/twenty"/>
    </RelativeLayout>

   <TextView
       android:layout_width="match_parent"
       android:layout_height="@dimen/two"
       android:background="#DDDDDD"/>

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="@dimen/zero"
       android:layout_weight="7.5"
       android:background="#FAFAFA">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="@dimen/zero"
           android:layout_weight="2">
          <ImageView
              android:layout_width="@dimen/oneHundredfifty"
              android:layout_height="@dimen/oneHundredfifty"
              android:src="@mipmap/bdyy"

              android:layout_alignParentBottom="true"
              android:layout_margin="@dimen/twenty"
              android:layout_centerHorizontal="true"/>

       </RelativeLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="@dimen/zero"
           android:layout_weight="3"
           android:orientation="vertical"
           android:layout_marginLeft="@dimen/ten"
           android:layout_marginRight="@dimen/ten"
           android:gravity="center">
          <EditText
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:hint="手机号/用户名/邮箱"/>
          <EditText
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:hint="密码"/>
       </LinearLayout>
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="@dimen/zero"
           android:layout_weight="1"
           android:layout_margin="@dimen/marginten">
          <Button
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="登录"
              android:textColor="#6B9EFF"
              android:background="#367CFF"/>
       </RelativeLayout>
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="@dimen/zero"
           android:layout_weight="1.5"
           >
         <ImageView
             android:id="@+id/resigster_question"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:src="@mipmap/bt_share_qq_press"
             android:layout_marginLeft="@dimen/ten"
             android:layout_centerInParent="true"/>
          <ImageView
              android:id="@+id/resigster_other"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:src="@mipmap/bt_share_qq_press"
              android:layout_centerInParent="true"/>
       </RelativeLayout>

    </LinearLayout>
   </RelativeLayout>


   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="@dimen/zero"
       android:layout_weight="3"
       android:gravity="center"
       android:background="#FAFAFA">
     <Button
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="立即注册"
         android:textColor="#367CFF"
         android:background="@null"
         android:textSize="@dimen/twenty"/>
   </RelativeLayout>
</LinearLayout>
