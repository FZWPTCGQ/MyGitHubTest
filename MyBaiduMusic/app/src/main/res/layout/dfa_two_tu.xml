<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <!--第一行-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/five"
        android:layout_marginBottom="@dimen/five">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/dfa_two_usepic"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"

            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignTop="@id/dfa_two_usepic"
            android:layout_toRightOf="@id/dfa_two_usepic"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dfa_two_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="你是个好姑娘"
                />


            <TextView
                android:id="@+id/dfa_two_ctime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11-25"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/dfa_two_guanzhu"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="@dimen/five"
            android:src="@mipmap/btn_follow_normal"
            />

        <ImageView
            android:id="@+id/dfa_two_tuijian"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/five"
            android:layout_toLeftOf="@id/dfa_two_guanzhu"
            android:src="@mipmap/btn_follow_normal"/>
    </RelativeLayout>
    <!--第二行-->
    <TextView
        android:id="@+id/dfa_two_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/five"
        android:layout_marginBottom="@dimen/five"
        android:ellipsize="marquee"
        android:maxLines="5"/>
    <!--第三行-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/dfa_two_pic_large_one"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:layout_margin="3dp"
            android:layout_height="match_parent"
            />

        <ImageView
            android:id="@+id/dfa_two_pic_large_two"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:layout_margin="@dimen/five"
            android:layout_height="match_parent"
            />
    </LinearLayout>
    <!--第四行-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/bt_playall_press"/>

                <ImageView
                    android:id="@+id/dfa_two_pic"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/dfa_two_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="水星记"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/dfa_two_artist_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="郭顶"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!--第五行-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:gravity="center_vertical">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_alignParentEnd="true"
            android:id="@+id/right_ll"
            >
            <TextView
                android:id="@+id/tv_zhuanfa"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/ten"
                android:text="转发"
                android:gravity="center"/>

            <ImageView
                android:layout_toLeftOf="@id/tv_zhuanfa"
                android:id="@+id/dfa_two_share"
                android:layout_width="@dimen/forty"
                android:layout_height="match_parent"
                android:src="@mipmap/icon_trendsdetail_trenspond_normal"
                />
        </LinearLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_toLeftOf="@id/right_ll"
            android:id="@+id/center_ll">
            <TextView
                android:id="@+id/tv_pinglun"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="评论"
                android:gravity="center"/>
            <ImageView
                android:id="@+id/dfa_two_pinglun"
                android:layout_width="@dimen/forty"
                android:layout_height="match_parent"
                android:src="@mipmap/bt_playpage_button_comment_normal"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_toLeftOf="@id/center_ll"
            android:id="@+id/left_ll">
            <TextView
                android:id="@+id/tv_dianzan"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="9"

                android:gravity="center"/>
            <ImageView
                android:id="@+id/dfa_two_dianzan"
                android:layout_width="@dimen/forty"
                android:layout_height="match_parent"

                android:src="@mipmap/icon_comment_like_normal"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>