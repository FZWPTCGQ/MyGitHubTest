<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="@dimen/twohundredtwentyfive"
              android:orientation="vertical"
    android:layout_marginTop="@dimen/fifteen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
           >

            <ImageView
                android:id="@+id/live_fragment_header_view_all"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/all"/>
            <TextView
                android:layout_marginTop="@dimen/ten"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="全部"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/live_fragment_header_view_girlgod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/girlgod"/>
            <TextView
                android:layout_marginTop="@dimen/ten"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="女神"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/live_fragment_header_view_goodsong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/gs"/>
            <TextView
                android:layout_marginTop="@dimen/ten"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="好声音"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/live_fragment_header_view_xinxiu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/xinxiu"/>
            <TextView
                android:layout_marginTop="@dimen/ten"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="新秀"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ten"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/live_fragment_header_view_jinbao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/jinbao"/>
            <TextView
                android:layout_marginTop="@dimen/ten"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="劲爆"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/live_fragment_header_view_gaoxiao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/gaoxiao"/>
            <TextView
                android:layout_marginTop="@dimen/ten"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="搞笑"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/live_fragment_header_view_mengmei"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/mengmei"/>
            <TextView
                android:layout_marginTop="@dimen/ten"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="萌妹"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/live_fragment_header_view_tuijian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/woca"/>
            <TextView
                android:layout_marginTop="@dimen/ten"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="推荐"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/fifty"
        >

        <LinearLayout
            android:id="@+id/iv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView


                android:layout_width="@dimen/thirty"
                android:layout_height="@dimen/thirty"
                android:src="@mipmap/daqiang"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/iv"
            android:gravity="center"
            android:text="热门视频"
            android:textSize="@dimen/twenty"/>


        <ImageView
            android:id="@+id/video_fragment_zuire_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:src="@mipmap/right_next"
            android:textSize="@dimen/twenty"
            />

        <TextView
            android:id="@+id/video_fragment_zuixin_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/fifteen"
            android:layout_toLeftOf="@id/video_fragment_zuire_tv"
            android:gravity="center"
            android:text="更多"
            android:textSize="@dimen/twenty"/>
    </RelativeLayout>
</LinearLayout>