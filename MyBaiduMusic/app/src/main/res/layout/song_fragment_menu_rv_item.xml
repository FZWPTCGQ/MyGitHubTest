<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:paddingBottom="@dimen/ten"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="@dimen/marginTwenty_five">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/onehundredseventy">
        <ImageView
            android:layout_margin="@dimen/marginfour"
            android:id="@+id/songfragmentmenu_rv_item_list_pic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_lebo_listen"
             />

        <LinearLayout
            android:layout_margin="@dimen/marginfive"
            android:orientation="horizontal"
            android:gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_gravity="bottom|left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <TextView
                android:padding="@dimen/three"
                android:id="@+id/songfragmentmenu_rv_item_listen_num_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sizeten"
               />
        </LinearLayout>


        <LinearLayout
            android:layout_margin="@dimen/five"
            android:gravity="bottom|right"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:src="@mipmap/bt_play_press"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>

    </FrameLayout>

    <TextView
        android:id="@+id/songfragmentmenu_rv_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#0e0e0e"
        android:maxLines="1"
        android:ellipsize="end"

        android:layout_marginLeft="@dimen/three"/>

    <TextView
        android:id="@+id/songfragmentmenu_rv_item_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#3d3c3c"

        android:layout_marginLeft="@dimen/three"/>
    <TextView
        android:textSize="@dimen/sizeten"
        android:id="@+id/songfragmentmenu_rv_item_songId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

</LinearLayout>