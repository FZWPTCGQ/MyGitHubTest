<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <!--第一行-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:gravity="center_vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/dfa_four_usepic"
            android:layout_width="@dimen/forty"
            android:layout_height="@dimen/forty"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignTop="@id/dfa_four_usepic"
            android:layout_toRightOf="@id/dfa_four_usepic"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dfa_four_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="你是个好姑娘"
                />


            <TextView
                android:id="@+id/dfa_four_ctime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11-25"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/dfa_four_guanzhu"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="@dimen/five"
            android:src="@mipmap/btn_follow_normal"
            />

        <ImageView
            android:id="@+id/dfa_four_tuijian"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/five"
            android:layout_toLeftOf="@id/dfa_four_guanzhu"
            android:src="@mipmap/btn_follow_normal"/>
    </RelativeLayout>
    <!--第二行-->
    <TextView
        android:layout_marginTop="@dimen/five"
        android:layout_marginBottom="@dimen/five"
        android:id="@+id/dfa_four_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="marquee"
        android:maxLines="5"/>
    <!--第三行-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/dfa_four_pic_large_one"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:scaleType="fitXY"
                android:layout_margin="@dimen/five"
                android:layout_weight="1"
                />

            <ImageView
                android:id="@+id/dfa_four_pic_large_two"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:layout_margin="@dimen/five"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/dfa_four_pic_large_three"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:layout_margin="@dimen/five"
                />

            <ImageView
                android:id="@+id/dfa_four_pic_large_four"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:layout_margin="@dimen/five"
                />
        </LinearLayout>
    </LinearLayout>
    <!--第四行-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:layout_marginTop="3dp"
        android:layout_margin="3dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                >

                <ImageView
                    android:id="@+id/dfa_four_pic"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/bt_playall_press"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/dfa_four_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="水星记"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/dfa_four_artist_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="郭顶"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!--第五行-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:gravity="center_vertical">


        <LinearLayout
            android:id="@+id/right_ll"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/tv_zhuanfa"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/ten"
                android:gravity="center"
                android:text="转发"/>

            <ImageView
                android:id="@+id/dfa_four_share"
                android:layout_width="@dimen/forty"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@id/tv_zhuanfa"
                android:src="@mipmap/icon_trendsdetail_trenspond_normal"
                />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/center_ll"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/right_ll"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_pinglun"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="评论"/>

            <ImageView
                android:id="@+id/dfa_four_pinglun"
                android:layout_width="@dimen/forty"
                android:layout_height="match_parent"
                android:src="@mipmap/bt_playpage_button_comment_normal"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/left_ll"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/center_ll"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_dianzan"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"

                android:text="9"/>

            <ImageView
                android:id="@+id/dfa_four_dianzan"
                android:layout_width="@dimen/forty"
                android:layout_height="match_parent"

                android:src="@mipmap/icon_comment_like_normal"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>