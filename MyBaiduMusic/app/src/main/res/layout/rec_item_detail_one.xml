<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="180dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/zero"
        android:layout_weight="3"
        android:gravity="center">
     <ImageView
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:id="@+id/rec_item_detail_one_pic"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/zero"
        android:layout_weight="1.5"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rec_item_detail_one_title"
            android:textSize="@dimen/sizethirteen"
            android:singleLine="true"
            android:ellipsize="marquee"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/zero"
        android:layout_weight="1">
       <TextView
           android:singleLine="true"
           android:ellipsize="marquee"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/rec_item_detail_one_author"
           android:textSize="@dimen/sizethirteen"
           android:layout_marginLeft="@dimen/marginTwenty_five"/>
    </LinearLayout>
</LinearLayout>